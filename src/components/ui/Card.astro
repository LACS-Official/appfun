---
interface Props {
  title?: string;
  subtitle?: string;
  padding?: 'none' | 'sm' | 'md' | 'lg';
  shadow?: 'none' | 'sm' | 'md' | 'lg';
  hover?: boolean;
  class?: string;
}

const {
  title,
  subtitle,
  padding = 'md',
  shadow = 'sm',
  hover = false,
  class: className = ''
} = Astro.props;

const paddingClasses = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8'
};

const shadowClasses = {
  none: '',
  sm: 'shadow-sm',
  md: 'shadow-md',
  lg: 'shadow-lg'
};

const hoverClass = hover ? 'hover:shadow-md transition-shadow duration-200' : '';
---

<div class={`bg-white rounded-lg border border-gray-200 ${shadowClasses[shadow]} ${hoverClass} ${className}`}>
  {(title || subtitle) && (
    <div class={`border-b border-gray-200 ${paddingClasses[padding]}`}>
      {title && (
        <h3 class="text-lg font-semibold text-gray-900">
          {title}
        </h3>
      )}
      {subtitle && (
        <p class="text-sm text-gray-600 mt-1">
          {subtitle}
        </p>
      )}
    </div>
  )}
  
  <div class={paddingClasses[padding]}>
    <slot />
  </div>
</div>
