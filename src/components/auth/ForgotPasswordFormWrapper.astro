---
// 这个组件用于包装忘记密码表单
---

<div id="forgot-password-form-container">
  <!-- 忘记密码表单将在这里渲染 -->
</div>

<!-- Supabase 未配置提示 -->
<div id="config-warning" class="hidden bg-yellow-50 border border-yellow-200 rounded-lg p-6">
  <div class="flex items-start space-x-3">
    <svg class="w-6 h-6 text-yellow-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.5 0L4.268 15.5c-.77.833.192 2.5 1.732 2.5z"></path>
    </svg>
    <div>
      <h3 class="text-lg font-medium text-yellow-800 mb-2">认证系统未配置</h3>
      <p class="text-yellow-700 mb-4">
        Supabase 认证服务尚未配置。请先配置 Supabase 项目以启用密码重置功能。
      </p>
      <a href="/auth/setup" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-yellow-800 bg-yellow-100 hover:bg-yellow-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500">
        配置认证系统
      </a>
    </div>
  </div>
</div>

<script>
  // 使用纯 JavaScript 创建忘记密码表单
  document.addEventListener('DOMContentLoaded', () => {
    // 检查认证系统是否可用
    setTimeout(() => {
      const container = document.getElementById('forgot-password-form-container');
      const warning = document.getElementById('config-warning');
      
      if (window.authManager) {
        const authState = window.authManager.getAuthState();
        
        if (authState.error && authState.error.includes('Supabase 未配置')) {
          // 显示配置警告
          container.style.display = 'none';
          warning.classList.remove('hidden');
          return;
        }
      }
      
      // 创建忘记密码表单 HTML
      if (container) {
        container.innerHTML = `
          <div class="bg-white rounded-lg shadow-md p-8">
            <div class="mb-6">
              <h2 class="text-2xl font-bold text-gray-900">重置密码</h2>
              <p class="text-gray-600 mt-2">输入您的邮箱地址，我们将发送重置链接给您</p>
            </div>
            
            <div id="success-message" class="hidden">
              <div class="text-center space-y-4">
                <div class="text-green-600 bg-green-50 p-4 rounded-md">
                  <p>我们已向您的邮箱发送了密码重置链接。</p>
                  <p class="text-sm mt-2">请检查您的邮箱并点击重置链接来设置新密码。</p>
                </div>
                <div class="flex justify-center">
                  <a href="/auth/login" class="inline-flex items-center text-sm text-blue-600 hover:text-blue-800">
                    ← 返回登录
                  </a>
                </div>
              </div>
            </div>
            
            <form id="forgot-password-form" class="space-y-6">
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700">邮箱</label>
                <input
                  id="email"
                  type="email"
                  required
                  class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                  placeholder="请输入您的邮箱地址"
                />
              </div>
              
              <div id="error-message" class="hidden text-sm text-red-600 bg-red-50 p-3 rounded-md"></div>
              
              <button
                type="submit"
                id="reset-button"
                class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed"
              >
                发送重置邮件
              </button>
            </form>
            
            <div class="mt-6 text-center">
              <a href="/auth/login" class="inline-flex items-center text-sm text-blue-600 hover:text-blue-800">
                ← 返回登录
              </a>
            </div>
          </div>
        `;
        
        // 绑定表单提交事件
        const form = document.getElementById('forgot-password-form');
        const emailInput = document.getElementById('email');
        const errorMessage = document.getElementById('error-message');
        const successMessage = document.getElementById('success-message');
        const resetButton = document.getElementById('reset-button');
        
        form.addEventListener('submit', async (e) => {
          e.preventDefault();
          
          const email = emailInput.value;
          
          if (!email) {
            showError('请输入邮箱地址');
            return;
          }
          
          // 显示加载状态
          resetButton.disabled = true;
          resetButton.textContent = '发送中...';
          hideError();
          
          try {
            if (window.authManager && window.authManager.resetPassword) {
              const result = await window.authManager.resetPassword(email);
              
              if (result.success) {
                // 重置邮件发送成功
                console.log('重置邮件发送成功');
                
                // 显示成功消息
                form.style.display = 'none';
                successMessage.classList.remove('hidden');
                
                if (window.authStatusIndicator) {
                  window.authStatusIndicator.showCustomMessage('重置邮件已发送！', 'success');
                }
              } else {
                showError(result.error || '发送重置邮件失败，请重试');
              }
            } else {
              showError('认证系统不可用，请刷新页面重试');
            }
          } catch (error) {
            console.error('重置密码错误:', error);
            showError('发送重置邮件失败，请重试');
          } finally {
            // 恢复按钮状态
            resetButton.disabled = false;
            resetButton.textContent = '发送重置邮件';
          }
        });
        
        function showError(message) {
          errorMessage.textContent = message;
          errorMessage.classList.remove('hidden');
        }
        
        function hideError() {
          errorMessage.classList.add('hidden');
        }
      }
    }, 500); // 等待认证管理器加载
  });
</script>
