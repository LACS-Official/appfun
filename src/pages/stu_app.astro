---
import Layout from '../layouts/Layout.astro';
import SoftwareListByTags from '../components/software/SoftwareListByTags.astro';
import { initializeApiClient } from '../lib/api';
import { apiConfig } from '../lib/config';

// 初始化 API 客户端
initializeApiClient(apiConfig);

const title = '大学专业软件';
const description = '专为大学生和专业人士设计的软件工具集合，涵盖学习、研究、办公等各个领域';
const tags = 'stu_app';
---

<Layout title={title} description={description}>
  <!-- 页面头部 -->
  <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <div class="flex justify-center mb-4">
          <div class="bg-white/20 p-4 rounded-full">
            <span class="text-4xl">🎓</span>
          </div>
        </div>
        <h1 class="text-4xl font-bold mb-4">{title}</h1>
        <p class="text-xl text-blue-100 max-w-3xl mx-auto">
          {description}
        </p>
        <div class="mt-6 flex justify-center">
          <div class="bg-white/20 rounded-full px-4 py-2">
            <span class="text-sm font-medium">专业软件工具</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- 特色介绍 -->
  <section class="py-12 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="bg-blue-100 p-3 rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center">
            <span class="text-2xl">📚</span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">学习工具</h3>
          <p class="text-gray-600">专业的学习辅助软件，提升学习效率</p>
        </div>
        <div class="text-center">
          <div class="bg-green-100 p-3 rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center">
            <span class="text-2xl">🔬</span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">研究工具</h3>
          <p class="text-gray-600">科研必备软件，支持数据分析和实验</p>
        </div>
        <div class="text-center">
          <div class="bg-purple-100 p-3 rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center">
            <span class="text-2xl">💼</span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">办公软件</h3>
          <p class="text-gray-600">专业办公套件，满足各种工作需求</p>
        </div>
      </div>
    </div>
  </section>

  <!-- 软件列表 -->
  <section class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SoftwareListByTags
        title="大学专业软件"
        description="为大学生和专业人士精心挑选的软件工具"
        tags={tags}
        limit={24}
        sortBy="updatedAt"
        sortOrder="desc"
        showViewAll={false}
        class="w-full"
      />
    </div>
  </section>

  <!-- 底部提示 -->
  <section class="py-8 bg-blue-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="bg-white rounded-lg p-6 shadow-sm">
        <h3 class="text-lg font-semibold text-gray-900 mb-2">找不到您需要的软件？</h3>
        <p class="text-gray-600 mb-4">我们持续更新软件库，如果您有特定需求，欢迎联系我们</p>
        <div class="flex justify-center space-x-4">
          <a href="/software" class="btn btn-outline">
            浏览全部软件
          </a>
          <a href="/search" class="btn btn-primary">
            搜索软件
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  import { initializeApiClient, getApiClient } from '../lib/api';
  import { apiConfig } from '../lib/config';

  // 初始化 API 客户端
  initializeApiClient(apiConfig);

  // 页面加载完成后的处理
  document.addEventListener('DOMContentLoaded', () => {
    console.log('大学专业软件页面已加载');

    // 设置全局API客户端
    window.apiClient = getApiClient();

    // 可以在这里添加页面特定的交互逻辑
    // 比如统计页面访问量、用户行为追踪等
  });
</script>

<style>
  .btn {
    @apply inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 transition-colors;
  }

  .btn-primary {
    @apply text-white bg-blue-600 hover:bg-blue-700 focus:ring-blue-500;
  }

  .btn-outline {
    @apply text-blue-700 bg-white border-blue-300 hover:bg-blue-50 focus:ring-blue-500;
  }
</style>
