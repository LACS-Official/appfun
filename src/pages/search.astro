        const [sortBy, sortOrder] = currentSort.split('-');
        params.sortBy = sortBy;
        params.sortOrder = sortOrder;
      }

      const response = await api.getSoftwareList(params);

      if (response.success && response.data) {
        const softwareList = response.data;
