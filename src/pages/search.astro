    } catch (error) {
      console.error('åŠ è½½æœç´¢å†å²å¤±è´¥:', error);
      container.innerHTML = '<p class="text-red-600 text-center py-8">åŠ è½½æœç´¢å†å²å¤±è´¥</p>';
    }
  }

  // æ¸…ç©ºæœç´¢å†å²
