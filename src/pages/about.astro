  document.addEventListener('DOMContentLoaded', async () => {
    const totalPageviewsEl = document.getElementById('total-pageviews');
    const uniqueVisitorsEl = document.getElementById('unique-visitors');
    const todayPageviewsEl = document.getElementById('today-pageviews');
    const activeVisitorsEl = document.getElementById('active-visitors');
    const lastUpdatedEl = document.getElementById('last-updated');


    // æ ¼å¼åŒ–æ•°å­—æ˜¾ç¤º
    function formatNumber(num: number): string {
      if (num >= 10000) {
        return (num / 1000).toFixed(1) + 'K';
      }
      return num.toLocaleString();
    }

    // è·å–ç»Ÿè®¡æ•°æ®
    async function fetchStats() {
      try {
        // è°ƒç”¨ç»Ÿè®¡æ•°æ® API
        const response = await fetch('/api/umami/stats');

        if (!response.ok) {
          throw new Error(`HTTP ${response.status}: ${response.statusText}`);
        }

        const result = await response.json();

        if (!result.success) {
          throw new Error(result.message || 'è·å–ç»Ÿè®¡æ•°æ®å¤±è´¥');
        }

        const stats = result.data;

        // æ›´æ–°æ˜¾ç¤º
        if (totalPageviewsEl) totalPageviewsEl.textContent = formatNumber(stats.totalPageviews);
        if (uniqueVisitorsEl) uniqueVisitorsEl.textContent = formatNumber(stats.uniqueVisitors);
        if (todayPageviewsEl) todayPageviewsEl.textContent = formatNumber(stats.todayPageviews);
        if (activeVisitorsEl) activeVisitorsEl.textContent = stats.activeVisitors.toString();

        // æ›´æ–°æ—¶é—´
        if (lastUpdatedEl) {
          const updateTime = new Date(stats.lastUpdated);
          lastUpdatedEl.textContent = updateTime.toLocaleString('zh-CN');
        }

        console.log('ç»Ÿè®¡æ•°æ®å·²æ›´æ–°:', stats);
      } catch (error: any) {
        console.error('è·å–ç»Ÿè®¡æ•°æ®å¤±è´¥:', error?.message);

        // æ˜¾ç¤ºé”™è¯¯çŠ¶æ€
        if (totalPageviewsEl) totalPageviewsEl.textContent = '--';
        if (uniqueVisitorsEl) uniqueVisitorsEl.textContent = '--';
        if (todayPageviewsEl) todayPageviewsEl.textContent = '--';
        if (activeVisitorsEl) activeVisitorsEl.textContent = '--';
        if (lastUpdatedEl) lastUpdatedEl.textContent = 'è·å–å¤±è´¥';
      }
    }

    // åˆå§‹åŠ è½½
    await fetchStats();

    // æ¯30ç§’æ›´æ–°ä¸€æ¬¡æ•°æ®
    setInterval(fetchStats, 30000);
  });

  // Umami äº‹ä»¶è·Ÿè¸ªï¼ˆå¦‚æœéœ€è¦ï¼‰
  function trackEvent(eventName: string, eventData: Record<string, any> = {}) {
