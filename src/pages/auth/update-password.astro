---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="更新密码 - APPFUN">
  <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      <div class="text-center">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">更新密码</h1>
        <p class="text-gray-600">请设置您的新密码</p>
      </div>
      
      <div id="update-password-form-container">
        <!-- 密码更新表单将在这里渲染 -->
      </div>
      
      <!-- Supabase 未配置提示 -->
      <div id="config-warning" class="hidden bg-yellow-50 border border-yellow-200 rounded-lg p-6">
        <div class="flex items-start space-x-3">
          <svg class="w-6 h-6 text-yellow-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.5 0L4.268 15.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
          <div>
            <h3 class="text-lg font-medium text-yellow-800 mb-2">认证系统未配置</h3>
            <p class="text-yellow-700 mb-4">
              Supabase 认证服务尚未配置。请先配置 Supabase 项目以启用密码更新功能。
            </p>
            <a href="/auth/setup" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-yellow-800 bg-yellow-100 hover:bg-yellow-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500">
              配置认证系统
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // 检查认证系统是否可用
    setTimeout(() => {
      const container = document.getElementById('update-password-form-container');
      const warning = document.getElementById('config-warning');

      if (window.authManager) {
        const authState = window.authManager.getAuthState();

        if (authState.error && authState.error.includes('Supabase 未配置')) {
          // 显示配置警告
          container.style.display = 'none';
          warning.classList.remove('hidden');
          return;
        }
      }

      // 创建密码更新表单 HTML
      if (container) {
        container.innerHTML = `
          <div class="bg-white rounded-lg shadow-md p-8">
            <div class="mb-6">
              <h2 class="text-2xl font-bold text-gray-900">重置您的密码</h2>
              <p class="text-gray-600 mt-2">请输入您的新密码</p>
            </div>

            <div id="success-message" class="hidden">
              <div class="text-center space-y-4">
                <div class="text-green-600 bg-green-50 p-4 rounded-md">
                  <p>您的密码已成功更新。</p>
                  <p class="text-sm mt-2">正在跳转到主页...</p>
                </div>
                <div class="flex justify-center">
                  <a href="/" class="inline-flex items-center text-sm text-blue-600 hover:text-blue-800">
                    立即前往 →
                  </a>
                </div>
              </div>
            </div>

            <form id="update-password-form" class="space-y-6">
              <div>
                <label for="password" class="block text-sm font-medium text-gray-700">新密码</label>
                <input
                  id="password"
                  type="password"
                  required
                  class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                  placeholder="请输入新密码（至少6位）"
                />
              </div>

              <div>
                <label for="confirm-password" class="block text-sm font-medium text-gray-700">确认新密码</label>
                <input
                  id="confirm-password"
                  type="password"
                  required
                  class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                  placeholder="请再次输入新密码"
                />
              </div>

              <div id="error-message" class="hidden text-sm text-red-600 bg-red-50 p-3 rounded-md"></div>

              <button
                type="submit"
                id="update-password-btn"
                class="w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed"
              >
                更新密码
              </button>
            </form>

            <div class="mt-4 text-center">
              <a href="/auth/login" class="inline-flex items-center text-sm text-blue-600 hover:text-blue-800">
                ← 返回登录
              </a>
            </div>
          </div>
        `;

        // 绑定表单事件
        setupUpdatePasswordForm();
      }
    }, 500); // 等待认证管理器加载
  });

  function setupUpdatePasswordForm() {
    const form = document.getElementById('update-password-form');
    const passwordInput = document.getElementById('password');
    const confirmPasswordInput = document.getElementById('confirm-password');
    const errorMessage = document.getElementById('error-message');
    const successMessage = document.getElementById('success-message');
    const updateBtn = document.getElementById('update-password-btn');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const password = passwordInput.value;
      const confirmPassword = confirmPasswordInput.value;

      // 验证密码
      if (password !== confirmPassword) {
        showError('两次输入的密码不一致');
        return;
      }

      if (password.length < 6) {
        showError('密码长度至少为6位');
        return;
      }

      updateBtn.disabled = true;
      updateBtn.textContent = '更新中...';
      hideError();

      try {
        const response = await fetch('/api/auth/update-password', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ password: password }),
        });

        const data = await response.json();

        if (response.ok) {
          // 密码更新成功
          form.style.display = 'none';
          successMessage.classList.remove('hidden');

          // 触发全局认证状态更新事件
          window.dispatchEvent(new CustomEvent('authStateChanged', {
            detail: { passwordUpdated: true }
          }));

          if (window.authStatusIndicator) {
            window.authStatusIndicator.showCustomMessage('密码更新成功！', 'success');
          }

          // 延迟跳转到主页
          setTimeout(() => {
            window.location.href = '/';
          }, 2000);
        } else {
          showError(data.error || '密码更新失败，请重试');
        }
      } catch (error) {
        console.error('密码更新错误:', error);
        showError('密码更新失败，请重试');
      } finally {
        updateBtn.disabled = false;
        updateBtn.textContent = '更新密码';
      }
    });

    function showError(message) {
      errorMessage.textContent = message;
      errorMessage.classList.remove('hidden');
    }

    function hideError() {
      errorMessage.classList.add('hidden');
    }
  }
</script>
</Layout>
