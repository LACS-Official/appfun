                </CardHeader>
                <CardContent client:load>
                  <div className="space-y-6">
                    <div className="rounded-xl bg-gradient-to-r from-orange-50 to-red-50 p-6 border border-orange-100">
                      <div className="flex items-center justify-between mb-4">
                        <h4 className="font-semibold text-gray-900 flex items-center">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                          </svg>
                          最近登录
                        </h4>
                        <span className="text-xs text-gray-500 bg-white px-2 py-1 rounded-full">刚刚</span>
                      </div>
                      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
                        <div class="flex items-center text-gray-600">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                          </svg>
                          IP: {Astro.request.headers.get('x-forwarded-for') || '127.0.0.1'}
                        </div>
                        <div class="flex items-center text-gray-600">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                          </svg>
                          {Astro.request.headers.get('user-agent')?.split(' ')[0] || '未知浏览器'}
                        </div>
                        <div class="flex items-center text-gray-600">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                          </svg>
                          {Astro.request.headers.get('user-agent')?.includes('Windows') ? 'Windows' : 'macOS' || '未知系统'}
                        </div>
                      </div>
                    </div>
                    
                    <div className="rounded-xl bg-gradient-to-r from-blue-50 to-purple-50 p-6 border border-blue-100">
                      <div className="flex items-center justify-between mb-4">
                        <h4 className="font-semibold text-gray-900 flex items-center">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                          </svg>
                          账户创建时间
                        </h4>
                        <span className="text-xs text-gray-500 bg-white px-2 py-1 rounded-full">{new Date(user?.created_at).toLocaleDateString()}</span>
                      </div>
                      <p className="text-sm text-gray-600">您的账户于 {new Date(user?.created_at).toLocaleDateString()} 创建，已使用 {Math.floor((new Date() - new Date(user?.created_at)) / (1000 * 60 * 60 * 24))} 天</p>
                    </div>
                    
                    {profile?.updated_at && (
                      <div className="rounded-xl bg-gradient-to-r from-green-50 to-teal-50 p-6 border border-green-100">
                        <div className="flex items-center justify-between mb-4">
                          <h4 className="font-semibold text-gray-900 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                            </svg>
                            最近更新
                          </h4>
                          <span className="text-xs text-gray-500 bg-white px-2 py-1 rounded-full">{new Date(profile.updated_at).toLocaleString()}</span>
                        </div>
                        <p className="text-sm text-gray-600">您的个人资料最后更新于 {new Date(profile.updated_at).toLocaleString()}</p>
                      </div>
                    )}
                  </div>
                </CardContent>
              </Card>
            </TabsContent>

            <TabsContent client:load value="preferences">
              <Card client:load className="border-0 shadow-xl bg-white/80 backdrop-blur-sm overflow-hidden">
                <div class="h-2 bg-gradient-to-r from-purple-500 to-pink-500"></div>
