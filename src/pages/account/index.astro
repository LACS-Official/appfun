  <script>
    // 表单提交处理
    document.getElementById('profile-form')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(e.target);
      const username = formData.get('username');
      const bio = formData.get('bio');
      
      // 这里可以添加表单验证逻辑
      if (!username || username.trim() === '') {
        // 使用更友好的提示方式
        const errorDiv = document.createElement('div');
        errorDiv.className = 'fixed top-4 right-4 bg-red-500 text-white px-4 py-3 rounded-lg shadow-lg z-50 flex items-center';
        errorDiv.innerHTML = `
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          用户名不能为空
        `;
        document.body.appendChild(errorDiv);
        
        // 3秒后自动移除
        setTimeout(() => {
          errorDiv.remove();
        }, 3000);
        
        return;
      }
      
      try {
        // 显示加载状态
        const submitBtn = e.target.querySelector('button[type="submit"]');
        const originalText = submitBtn.textContent;
        submitBtn.textContent = '保存中...';
        submitBtn.disabled = true;
        
        // 发送请求到服务器更新用户资料
        const response = await fetch('/api/profile', {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ username, bio }),
        });
        
        const result = await response.json();
        
        if (!response.ok) {
          throw new Error(result.error || '更新失败');
        }
        
        // 显示成功消息
        const successDiv = document.createElement('div');
        successDiv.className = 'fixed top-4 right-4 bg-green-500 text-white px-4 py-3 rounded-lg shadow-lg z-50 flex items-center';
        successDiv.innerHTML = `
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          个人资料更新成功！
        `;
        document.body.appendChild(successDiv);
        
        // 3秒后自动移除
        setTimeout(() => {
          successDiv.remove();
        }, 3000);
        
        // 刷新页面以显示更新后的数据
        setTimeout(() => {
          location.reload();
        }, 1000);
      } catch (error) {
        // 显示错误消息
        const errorDiv = document.createElement('div');
        errorDiv.className = 'fixed top-4 right-4 bg-red-500 text-white px-4 py-3 rounded-lg shadow-lg z-50 flex items-center';
        errorDiv.innerHTML = `
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          更新失败，请稍后重试
        `;
        document.body.appendChild(errorDiv);
        
        // 3秒后自动移除
        setTimeout(() => {
          errorDiv.remove();
        }, 3000);
        
        console.error('更新个人资料失败:', error);
      } finally {
        // 恢复按钮状态
        const submitBtn = e.target.querySelector('button[type="submit"]');
        submitBtn.textContent = originalText;
        submitBtn.disabled = false;
      }
    });
  </script>
