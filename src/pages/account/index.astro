          <Card className="sticky top-8">
            <CardContent className="p-6">
              <div class="flex flex-col items-center">
                <div class="relative mb-4">
                  <Avatar client:load className="h-24 w-24 rounded-full border-4 border-white shadow-md">
                    {profile?.avatar_url ? (
                      <img src={profile.avatar_url} alt={`${profile.username}的头像`} class="h-full w-full object-cover rounded-full" />
                    ) : (
                      <div class="flex h-full w-full items-center justify-center rounded-full bg-primary/10 text-primary">
                        <span class="text-3xl font-bold">{profile?.username?.charAt(0)?.toUpperCase() || 'U'}</span>
                      </div>
